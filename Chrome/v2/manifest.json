{
  "name": "Notifier for Trello",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "View, filter, and save your Trello notifications as read or unread.",
  "homepage_url": "http://cycododge.com/projects#notifier",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/trello.custom.js",
      "js/buzz.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "Notifier for Trello v2.0.0",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "https://*.trello.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "css/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "js/inject.js"
      ]
    }
  ]
}